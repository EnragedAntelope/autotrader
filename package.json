{
  "name": "alpaca-trading-scanner",
  "version": "1.0.0",
  "description": "Alpaca Trading Scanner & Automation Platform - Desktop application for automated stock and options screening with risk management",
  "main": "electron/main.js",
  "author": "Your Name",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/EnragedAntelope/autotrader.git"
  },
  "homepage": "https://github.com/EnragedAntelope/autotrader#readme",
  "bugs": {
    "url": "https://github.com/EnragedAntelope/autotrader/issues"
  },
  "engines": {
    "node": ">=18.0.0 <23.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "axios": "^1.7.9",
    "glob": "^11.0.0",
    "rimraf": "^6.0.1",
    "inflight": "npm:@nolyfill/inflight@latest",
    "eslint": "^9.15.0"
  },
  "scripts": {
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "tsc && vite build",
    "build:electron": "electron-builder",
    "preview": "vite preview",
    "lint": "eslint src --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"electron/**/*.js\"",
    "test": "jest"
  },
  "dependencies": {
    "@alpacahq/alpaca-trade-api": "^3.0.2",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^5.16.7",
    "@mui/material": "^5.16.7",
    "@reduxjs/toolkit": "^2.3.0",
    "axios": "^1.7.9",
    "better-sqlite3": "^9.4.5",
    "dotenv": "^16.4.7",
    "node-cron": "^3.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.1.2",
    "recharts": "^2.12.7",
    "yahoo-finance2": "^2.13.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@eslint/js": "^9.15.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.16.11",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0",
    "vite": "^5.4.14",
    "vite-plugin-electron": "^0.28.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.alpaca.tradingscanner",
    "productName": "Alpaca Trading Scanner",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "database/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Finance"
    }
  }
}
